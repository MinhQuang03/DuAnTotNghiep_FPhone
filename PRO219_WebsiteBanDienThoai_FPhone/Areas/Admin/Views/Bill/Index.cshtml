@model IEnumerable<AppData.Models.Bill>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên Khách Hàng
            </th>
            <th>Mã Hóa Đơn</th>
            <th>
                Ngày Tạo
            </th>
            <th>
                Tình Trạng
            </th>
            <th>Chi tiết</th>
            <th>
                Trạng Thái Thanh Toán
            </th>

            <th>Hành Động  </th>
        </tr>
    </thead>
    <tbody>
         @if(Model == null ) {
            <h2  style="text-align:center"> Hiện đang Không có hóa đơn  </h2>
        }else
        {
        @foreach (var item in Model)
        {
            String dh1 = "Đã xác nhận";
            String dh2 = "Chờ xác nhận";
     
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedTime)
                </td>
                <td>
                    @if (item.Status == 2)
                    {
                        <p class="text-danger"> @dh2</p>
                    }
                   
                </td>
                <td>
                    <a href="@Url.Action("Detail", "Bill", new { id = item.Id })">Xem Chi tiết</a>
                </td>
                <td>
                    @item.deliveryPaymentMethod  @if (item.StatusPayment == 1)
                    {
                        <span class="text-success">Đã thanh toán </span>
                    }
                    else
                    {
                        <span class="text-danger">Chưa thanh toán </span>
                    }
                </td>

                <td>
                        <a class="btn btn-sm btn-light text-danger border a33" href="@Url.Action("Status", "Bill", new { id = item.Id })"> <i class="fas fa-toggle-on"></i> </a>
                    
      
                    <a class="btn btn-sm btn-light text-danger border" href=""> <i class="fas fa-trash-alt"></i></a>

                      <a class="btn btn-sm btn-light text-orange border" href="@Url.Action("Dahuy", "Bill", new { id = item.Id })"> <i class="fas fa-ban"></i></a>
                </td>
            </tr>
        }
        }

    </tbody>

</table>


