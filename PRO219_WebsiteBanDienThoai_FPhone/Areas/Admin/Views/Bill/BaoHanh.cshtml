@using AppData.Models;
@model List<BillDetails>

@{
    ViewData["Title"] = "HoanTraHoacBaoHanh";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3>Danh Sách Sản Phẩm Hoàn Cần Bảo Hành</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                Tên tài khoản  
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                Hành động
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            String dh0 = "Bảo hành thành công";
            String dh4 = "Yêu cầu bảo hành";
            String dh5 = "Xác nhận bảo hành";
            String dh6 = "Đang thực hiện bảo hành";
            <tr>
                <td>
                    @item.Bills.Accounts.Username
                </td>
                <td>
                    @item.PhoneDetaild.Phones.PhoneName |
                    @item.PhoneDetaild.Rams.Name/@item.PhoneDetaild.Roms.Name |
                    @item.PhoneDetaild.Colors.Name
                </td>
                <td>
                    @if(item.Status == 0 && item.Note != null && item.Update_at != null)
                    {
                        <p class="text-success"> @dh0</p>
                    }
                    @if (item.Status == 4)
                    {
                        <p class="text-success"> @dh4</p>
                    }
                    else if (item.Status == 5)
                    {
                        <p class="text-success"> @dh5</p>
                    }
                </td>
                <td>
                    <a href="@Url.Action("ChiTietBaoHanh", "Bill", new { id = item.Id })">Xem Chi tiết</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>



