            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                    @ViewBag.PhoneName[item.IdPhone]
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDiscount)
            </td>
            <td>
                    @ViewBag.MaterialName[item.IdMaterial]
            </td>
            <td>
                    @ViewBag.RomName[item.IdRom]
            </td>
            <td>
                    @ViewBag.RamName[item.IdRam]
            </td>
            <td>
                    @ViewBag.OperatingSystemName[item.IdOperatingSystem]
            </td>
            <td>
                    @ViewBag.BatteryName[item.IdBattery]
            </td>
            <td>
                    @ViewBag.SimName[item.IdSim]
            </td>
            <td>
                    @ViewBag.ChipCPUName[item.IdChipCPU]
            </td>
            <td>
                    @ViewBag.ChipGPUName[item.IdChipGPU]
            </td>
            <td>
                    @ViewBag.ColorName[item.IdColor]
            </td>
            <td>
                    @ViewBag.ChargingportName[item.IdChargingport]
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FrontCamera)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MainCamera)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resolution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) 
            </td>
        </tr>
}
    </tbody>
</table>
