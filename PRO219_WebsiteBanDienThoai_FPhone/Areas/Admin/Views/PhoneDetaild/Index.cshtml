@model IEnumerable<AppData.Models.PhoneDetaild>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdDiscount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdMaterial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdOperatingSystem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdBattery)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdSim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdChipCPU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdChipGPU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdChargingport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FrontCamera)
