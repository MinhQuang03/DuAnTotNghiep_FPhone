@model PRO219_WebsiteBanDienThoai_FPhone.ViewModel.AdPhoneInsertViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Thêm mới nhóm sản phẩm</h1>
<br/>
<h4>Thông tin nhóm sản phẩm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <labe class="control-label">Nhà sản xuất</labe>
                @Html.DropDownListFor(model => model.IdProductionCompany, new SelectList(Model.ListCompany, "Id", "Name"), "--- Lựa chọn ---", new { @class = "form-control" })
                <span asp-validation-for="IdProductionCompany" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label class="control-label">Tên nhóm sản phẩm</label>
                <input asp-for="PhoneName" class="form-control" />
                <span asp-validation-for="PhoneName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mô tả</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Thời hạn bảo hành</label>
                @Html.DropDownListFor(model => model.IdWarranty, new SelectList(Model.ListWarranty, "Id", "TimeWarranty"), "--- Lựa chọn ---", new { @class = "form-control"})
            </div>
            <div class="form-group">
                <label class="control-label">Chọn ảnh</label>
                @*<input asp-for="Image" class="form-control" />*@
                <input type="file" name="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@("<<") Trở lại</a>
</div>

